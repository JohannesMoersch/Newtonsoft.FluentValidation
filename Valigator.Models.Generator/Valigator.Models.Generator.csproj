	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Valigator.Core\Valigator.Core.csproj" />
	  <ProjectReference Include="..\Valigator.Models\Valigator.Models.csproj" />
	</ItemGroup>

</Project>
